@model PROJECT_QUIZ.Models.Models.Quiz

@{
    ViewData["Title"] = "RateQuiz";
    List<String> listdifs = new List<String>() { "Super", "Goed", "Gemiddeld", "Slecht" };
    var listitems = listdifs.Select(x => new SelectListItem() { Value = x, Text = x }).ToList();
}

<h1>RateQuiz</h1>

<h4>Quiz</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CatchRating">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="QuizID" class="form-control" />
                <span asp-validation-for="QuizID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <select asp-for="Rating" asp-items="@listitems" class="form-control custom-select"></select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@model PROJECT_QUIZ.Models.Models.Questions

@{
    ViewData["Title"] = "Details";
    var base64 = Convert.ToBase64String(Model.ImageData);
    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
}

<h1>Details</h1>

<div>
    <h4>Questions</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionText)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionText)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuizID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuizID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageData)
        </dt>
        <dd class = "col-sm-10">
            <img src="@imgSrc" />
        </dd>
    </dl>
</div>


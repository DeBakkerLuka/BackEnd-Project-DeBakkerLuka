@model PROJECT_QUIZ.Models.Models.Questions

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Questions</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuestionText" class="control-label"></label>
                <input asp-for="QuestionText" class="form-control" />
                <span asp-validation-for="QuestionText" class="text-danger"></span>
            </div>
            <div class="form-group custom-file">
                <label asp-for="ImageString" class="custom-file-label" for="inputGroupFile02">Choose file</label>
                <input asp-for="ImageString" class="custom-file-input form-control" type="file" />
                <span asp-validation-for="ImageString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="QuizID" class="form-control" />
                <span asp-validation-for="QuizID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-page-handler="Upload" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
